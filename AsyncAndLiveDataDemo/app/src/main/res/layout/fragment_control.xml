<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ControlFragment" android:id="@+id/frameLayout">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/colorAccent">
        <Button
                android:text="startstop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/startstop"/>
        <Button
                android:text="lap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lap"/>
        <Button
                android:text="clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/clear"/>
    </LinearLayout>
</FrameLayout>